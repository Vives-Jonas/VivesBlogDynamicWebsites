
@{
}
@model BlogPost


<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        @if (Model.Author is not null) 
        {
            <h6 class="card-subtitle mb-2 text-muted">@Model.Author</h6>
        }        
        <p class="card-text">@Model.Content</p>
        <a asp-area="" asp-controller="Blog" asp-action="Detail" asp-route-id="@Model.ID" class="card-link">Details</a>
        <a href="#" class="card-link">Another link</a>
    </div>
</div>
